<%- include("partials/header"); -%>

<div class="container-fluid">

  <div class="row">
    <% movies.forEach(function(movie) { %>
    <div class="col-lg-2 col-md-3 col-sm-6">

      <div class="container">
        <div class="card">
          <img src="<%=posterUrl + movie.poster_path%>" alt="">
          <div class="card-details">
            <div class="name"><a class="movie-link" href="<%=movieUrl + movie.id%>"><%=movie.original_title%></a></div>
            <button class="addButton" type="submit" name="addButton">Add to Watchlist</button>
          </div>
        </div>
      </div>

    </div>
    <% }); %>

  </div>

</div>

<%- include("partials/footer"); -%>
